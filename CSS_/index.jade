mixin clients()
    li
        .client
            img(src="#{attributes['url']}")
            p
                | #{attributes['text']}
                span @#{attributes['name']}

mixin software()
    li
        div(class=[attributes['class']])
            i(class=['fa', attributes['icon']])
            h4 #{attributes['title']}
            p #{attributes['text']}

mixin contact()
    li
        div(class=[attributes['class']])
            i(class=['fa', attributes['icon']])
            h4 #{attributes['title']}
            p #{attributes['text']}

